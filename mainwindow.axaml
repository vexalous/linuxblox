<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LinuxBlox.ViewModels"
        xmlns:views="using:LinuxBlox.Views"
        x:Class="linuxblox.MainWindow"
        Title="LinuxBlox"
        Width="700" Height="500">
  
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <DockPanel Margin="15">
    <Border DockPanel.Dock="Bottom"
            BorderBrush="Gray"
            BorderThickness="0,1,0,0"
            Padding="5,10,5,5">
      <TextBlock Text="{Binding StatusMessage}"
                 TextWrapping="Wrap"
                 Opacity="0.7"/>
    </Border>

    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
        <Button Name="HamburgerButton" Content="â˜°" Command="{Binding TogglePaneCommand}" Padding="10,5"/>
    </StackPanel>

    <SplitView DisplayMode="CompactOverlay" PanePlacement="Left" IsPaneOpen="{Binding IsPaneOpen}">
      <SplitView.Pane>
        <StackPanel Margin="10">
          <Button Content="Launch" Name="LaunchFlagsButton" Margin="0,0,0,5" Command="{Binding ShowLaunchAndFlagsViewCommand}"/>
          <Button Content="Settings" Name="SettingsButton" Command="{Binding ShowSettingsViewCommand}"/>
        </StackPanel>
      </SplitView.Pane>

      <SplitView.Content>
        <ContentControl>
          <ContentControl.Styles>
            <Style Selector="ContentControl">
              <Setter Property="Content">
                <views:LaunchAndFlagsView/>
              </Setter>
            </Style>
            <!-- This Style is more specific due to the attribute selector, so it should take precedence. -->
            <Style Selector="ContentControl[DataContext.CurrentViewName='Settings']">
              <Setter Property="Content">
                <views:SettingsView/>
              </Setter>
            </Style>
          </ContentControl.Styles>
        </ContentControl>
      </SplitView.Content>
    </SplitView>
  </DockPanel>
</Window>
