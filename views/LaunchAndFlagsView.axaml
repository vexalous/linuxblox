<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LinuxBlox.ViewModels"
             xmlns:reactiveUi="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
             x:Class="LinuxBlox.Views.LaunchAndFlagsView"
             x:DataType="vm:MainWindowViewModel">
  <!-- Assuming DataContext will be MainWindowViewModel -->
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <StackPanel Spacing="15" Margin="10">
    <Button Content="Launch Sober"
            Command="{Binding PlayCommand}"
            HorizontalAlignment="Left"
            Padding="20,10"
            Background="{DynamicResource SystemAccentColor}"/>

    <!-- Flag editor elements removed from here -->

  </StackPanel>
</UserControl>
